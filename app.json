{
  "expo": {
    "name": "BetterYazio",
    "slug": "better-yazio",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "icon": {
        "dark": "./assets/images/ios_dark.png",
        "light": "./assets/images/ios_light.png",
        "tinted": "./assets/images/ios_tinted.png"
      },
      "bundleIdentifier": "com.draqzziq.betteryazio",
      "infoPlist": {
        "NSCameraUsageDescription": "$(PRODUCT_NAME) needs access to your Camera.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "edgeToEdgeEnabled": false,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive_icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.draqzziq.betteryazio",
      "permissions": ["android.permission.CAMERA"]
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#ffffff",
          "image": "./assets/images/splash_icon_dark.png",
          "dark": {
            "image": "./assets/images/splash_icon_light.png",
            "backgroundColor": "#000000"
          },
          "imageWidth": 200
        }
      ],
      [
        "expo-dev-client",
        {
          "launchMode": "most-recent"
        }
      ],
      [
        "react-native-vision-camera",
        {
          "cameraPermissionText": "$(PRODUCT_NAME) needs access to your Camera.",
          "enableCodeScanner": true
        }
      ],
      "expo-localization",
      "expo-sqlite",
      "react-native-legal",
      [
        "react-native-android-widget",
        {
          "widgets": [
            {
              "name": "Streak",
              "label": "Streaks",
              "minWidth": "50dp",
              "minHeight": "50dp",
              "targetCellWidth": 2,
              "targetCellHeight": 2,
              "description": "Track daily to keep your streak!",
              "previewImage": "./assets/widget-preview/streak.png",
              "updatePeriodMillis": 1800000,
              "resizeMode": "horizontal|vertical"
            }
          ]
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "9d99445a-519f-4805-95c9-463872ff587b"
      }
    }
  }
}
